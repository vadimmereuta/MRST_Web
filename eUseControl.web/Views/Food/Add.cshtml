@model eUseControl.web.Models.FoodItemViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Adaugă aliment";
}

<h2>Adaugă aliment</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Calories)
        @Html.TextBoxFor(m => m.Calories, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Calories)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Protein)
        @Html.TextBoxFor(m => m.Protein, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Carbs)
        @Html.TextBoxFor(m => m.Carbs, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Fat)
        @Html.TextBoxFor(m => m.Fat, new { @class = "form-control" })
    </div>

    <button class="btn btn-success" type="submit">Adaugă</button>
}
