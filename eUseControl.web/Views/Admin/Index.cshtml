@model IEnumerable<eUseControl.Domain.Entities.Models.User>

@{
    ViewBag.Title = "Panou Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Panou de Control Admin</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>Username</th>
            <th>Rol</th>
            <th>Acțiuni</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Username</td>
                <td>@user.Role</td>
                <td>
                    @if (user.Role != "Admin")
                    {
                        <a href="@Url.Action("Delete", "Admin", new { id = user.Id })"
                           class="btn btn-danger btn-sm">Șterge</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
