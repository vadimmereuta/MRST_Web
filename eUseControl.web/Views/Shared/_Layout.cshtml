@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")

    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>

</head>
@RenderSection("scripts", required: false)
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="@Url.Action("Index", "Dashboard")">My Fitness Pal</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                            aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="mainNavbar">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            @if (Session["Username"] != null)
                            {
                                <li class="nav-item">@Html.ActionLink("Dashboard", "Index", "Dashboard", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Mese", "Index", "Meals", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Adaugă masă", "Add", "Meals", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Alimente", "Index", "Food", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Adaugă aliment", "Add", "Food", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Antrenamente", "Index", "Workouts", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Adaugă antrenament", "Add", "Workouts", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Profil", "Index", "Profile", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Statistici", "Index", "Reports", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Login", null, new { @class = "nav-link text-danger" })</li>
                            }
                            @if (Session["Role"]?.ToString() == "Admin")
                            {
                                <li>@Html.ActionLink("Admin Panel", "Index", "Admin", null, new { @class = "btn btn-link" })</li>
                            }

                            else
                            {
                                <li class="nav-item">@Html.ActionLink("Login", "Index", "Login", null, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Register", "Index", "Register", null, new { @class = "nav-link" })</li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
</body>
</html>